@model EventEaseAdmin.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container mt-5">
    <div class="alert alert-danger">
        <h1 class="display-4">An error occurred.</h1>
        <h2>@Model.Message</h2>
        <p>Request ID: <code>@Model.RequestId</code></p>
        <p>@Model.SuggestedAction</p>
        <a href="/" class="btn btn-primary">Go Home</a>
    </div>
</div>
@if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    <div class="alert alert-warning mt-3">
        <strong>Development Mode:</strong> Detailed error information is available in the logs.
    </div>
}
