@page
@model EventEaseAdmin.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h1 class="display-4 mb-4 text-center">Welcome to EventEase Admin</h1>
                    <p class="lead text-center mb-4">This is the admin dashboard for managing Venues, Events, Bookings, and Customers.</p>

                    <h2 class="h4 mt-4">Navigation</h2>
                    <ul class="list-group mb-4">
                        <li class="list-group-item"><a class="btn btn-outline-primary w-100" href="/Venues/Index">Manage Venues</a></li>
                        <li class="list-group-item"><a class="btn btn-outline-primary w-100" href="/Events/Index">Manage Events</a></li>
                        <li class="list-group-item"><a class="btn btn-outline-primary w-100" href="/Bookings/Index">Manage Bookings</a></li>
                        <li class="list-group-item"><a class="btn btn-outline-primary w-100" href="/Customers/Index">Manage Customers</a></li>
                    </ul>

                    <h2 class="h4 mt-4">Documentation</h2>
                    <ul>
                        <li>To get started, use the navigation links above to manage your data.</li>
                        <li>Each section allows you to create, view, edit, and delete records.</li>
                        <li>Database changes are automatically applied using Entity Framework Core migrations.</li>
                        <li>For connection string and deployment, see the README file in the repository.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
