@page
@model EventEaseAdmin.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Full Name</dt>
        <dd class = "col-sm-10">@Model.Customer.FullName</dd>
        <dt class = "col-sm-2">Email</dt>
        <dd class = "col-sm-10">@Model.Customer.Email</dd>
        <dt class = "col-sm-2">Phone</dt>
        <dd class = "col-sm-10">@Model.Customer.Phone</dd>
        <dt class = "col-sm-2">Organization</dt>
        <dd class = "col-sm-10">@Model.Customer.Organization</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Customer.CustomerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
