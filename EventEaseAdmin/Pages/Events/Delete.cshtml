@page
@model EventEaseAdmin.Pages.Events.DeleteModel
@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.Event.EventName</dd>
        <dt class = "col-sm-2">Date</dt>
        <dd class = "col-sm-10">@Model.Event.EventDate.ToShortDateString()</dd>
        <dt class = "col-sm-2">Description</dt>
        <dd class = "col-sm-10">@Model.Event.Description</dd>
        <dt class = "col-sm-2">Venue</dt>
        <dd class = "col-sm-10">@Model.Event.VenueId</dd>
        <dt class = "col-sm-2">Customer</dt>
        <dd class = "col-sm-10">@Model.Event.CustomerId</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Event.EventId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
