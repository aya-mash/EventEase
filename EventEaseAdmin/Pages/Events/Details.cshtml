@page
@model EventEaseAdmin.Pages.Events.DetailsModel
@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.Event.EventName</dd>
        <dt class = "col-sm-2">Date</dt>
        <dd class = "col-sm-10">@Model.Event.EventDate.ToShortDateString()</dd>
        <dt class = "col-sm-2">Description</dt>
        <dd class = "col-sm-10">@Model.Event.Description</dd>
        <dt class = "col-sm-2">Venue</dt>
        <dd class = "col-sm-10">@Model.Event.VenueId</dd>
        <dt class = "col-sm-2">Customer</dt>
        <dd class = "col-sm-10">@Model.Event.CustomerId</dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Event.EventId">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>
