@page
@model EventEaseAdmin.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>
<p>
    <a asp-page="Create" class="btn btn-success mb-2">Create New Event</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Venue</th>
            <th>Customer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.EventList)
    {
        <tr>
            <td>@item.EventName</td>
            <td>@item.EventDate.ToShortDateString()</td>
            <td>@item.Description</td>
            <td>@item.VenueId</td>
            <td>@item.CustomerId</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-primary">Edit</a>
                <a asp-page="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info">Details</a>
                <a asp-page="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
