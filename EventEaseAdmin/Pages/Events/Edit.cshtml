@page
@model EventEaseAdmin.Pages.Events.EditModel
@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>
<form method="post">
    <input type="hidden" asp-for="Event.EventId" />
    <div class="form-group">
        <label asp-for="Event.EventName"></label>
        <input asp-for="Event.EventName" class="form-control" />
        <span asp-validation-for="Event.EventName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.EventDate"></label>
        <input asp-for="Event.EventDate" class="form-control" />
        <span asp-validation-for="Event.EventDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.Description"></label>
        <input asp-for="Event.Description" class="form-control" />
        <span asp-validation-for="Event.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.VenueId"></label>
        <input asp-for="Event.VenueId" class="form-control" />
        <span asp-validation-for="Event.VenueId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.CustomerId"></label>
        <input asp-for="Event.CustomerId" class="form-control" />
        <span asp-validation-for="Event.CustomerId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
