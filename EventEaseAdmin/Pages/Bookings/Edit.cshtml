@page
@model EventEaseAdmin.Pages.Bookings.EditModel
@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>
<form method="post">
    <input type="hidden" asp-for="Booking.BookingId" />
    <div class="form-group">
        <label asp-for="Booking.EventId"></label>
        <input asp-for="Booking.EventId" class="form-control" />
        <span asp-validation-for="Booking.EventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.VenueId"></label>
        <input asp-for="Booking.VenueId" class="form-control" />
        <span asp-validation-for="Booking.VenueId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.BookingDate"></label>
        <input asp-for="Booking.BookingDate" class="form-control" />
        <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.Status"></label>
        <input asp-for="Booking.Status" class="form-control" />
        <span asp-validation-for="Booking.Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
