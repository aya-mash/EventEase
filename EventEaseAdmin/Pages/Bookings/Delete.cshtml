@page
@model EventEaseAdmin.Pages.Bookings.DeleteModel
@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Event</dt>
        <dd class = "col-sm-10">@Model.Booking.EventId</dd>
        <dt class = "col-sm-2">Venue</dt>
        <dd class = "col-sm-10">@Model.Booking.VenueId</dd>
        <dt class = "col-sm-2">Booking Date</dt>
        <dd class = "col-sm-10">@Model.Booking.BookingDate.ToShortDateString()</dd>
        <dt class = "col-sm-2">Status</dt>
        <dd class = "col-sm-10">@Model.Booking.Status</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Booking.BookingId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
