@page
@model EventEaseAdmin.Pages.Bookings.DetailsModel
@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Event</dt>
        <dd class = "col-sm-10">@Model.Booking.EventId</dd>
        <dt class = "col-sm-2">Venue</dt>
        <dd class = "col-sm-10">@Model.Booking.VenueId</dd>
        <dt class = "col-sm-2">Booking Date</dt>
        <dd class = "col-sm-10">@Model.Booking.BookingDate.ToShortDateString()</dd>
        <dt class = "col-sm-2">Status</dt>
        <dd class = "col-sm-10">@Model.Booking.Status</dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Booking.BookingId">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>
