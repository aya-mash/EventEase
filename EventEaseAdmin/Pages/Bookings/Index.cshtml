@page
@model EventEaseAdmin.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>
<p>
    <a asp-page="Create" class="btn btn-success mb-2">Create New Booking</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.BookingList)
    {
        <tr>
            <td>@item.EventId</td>
            <td>@item.VenueId</td>
            <td>@item.BookingDate.ToShortDateString()</td>
            <td>@item.Status</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-primary">Edit</a>
                <a asp-page="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-info">Details</a>
                <a asp-page="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
