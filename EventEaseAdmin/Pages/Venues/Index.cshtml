@page
@model EventEaseAdmin.Pages.Venues.IndexModel
@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>
<p>
    <a asp-page="Create" class="btn btn-success mb-2">Create New Venue</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.VenueList)
    {
        <tr>
            <td>@item.VenueName</td>
            <td>@item.Location</td>
            <td>@item.Capacity</td>
            <td><img src="@item.ImageUrl" width="100" /></td>
            <td>@item.IsActive</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.VenueId" class="btn btn-sm btn-primary">Edit</a>
                <a asp-page="Details" asp-route-id="@item.VenueId" class="btn btn-sm btn-info">Details</a>
                <a asp-page="Delete" asp-route-id="@item.VenueId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
