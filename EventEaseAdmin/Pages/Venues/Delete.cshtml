@page
@model EventEaseAdmin.Pages.Venues.DeleteModel
@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.Venue.VenueName</dd>
        <dt class = "col-sm-2">Location</dt>
        <dd class = "col-sm-10">@Model.Venue.Location</dd>
        <dt class = "col-sm-2">Capacity</dt>
        <dd class = "col-sm-10">@Model.Venue.Capacity</dd>
        <dt class = "col-sm-2">Image</dt>
        <dd class = "col-sm-10"><img src="@Model.Venue.ImageUrl" width="200" /></dd>
        <dt class = "col-sm-2">Is Active</dt>
        <dd class = "col-sm-10">@Model.Venue.IsActive</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Venue.VenueId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
