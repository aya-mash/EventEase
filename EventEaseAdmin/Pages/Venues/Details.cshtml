@page
@model EventEaseAdmin.Pages.Venues.DetailsModel
@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>
<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Model.Venue.VenueName</dd>
        <dt class = "col-sm-2">Location</dt>
        <dd class = "col-sm-10">@Model.Venue.Location</dd>
        <dt class = "col-sm-2">Capacity</dt>
        <dd class = "col-sm-10">@Model.Venue.Capacity</dd>
        <dt class = "col-sm-2">Image</dt>
        <dd class = "col-sm-10"><img src="@Model.Venue.ImageUrl" width="200" /></dd>
        <dt class = "col-sm-2">Is Active</dt>
        <dd class = "col-sm-10">@Model.Venue.IsActive</dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Venue.VenueId">Edit</a> |
    <a asp-page="Index">Back to List</a>
</div>
